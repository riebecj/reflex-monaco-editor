{
  "compilerOptions": {
    "outDir": "src/react/dist",
    "module": "es2020",
    "target": "es5",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "rewriteRelativeImportExtensions": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["./dist/export/nodejs/modules/node-default/node_modules/*"],
      "monaco-editor-enhanced": ["./src/react/*"]
    }
  },
  "include": ["src/react/**/*"],
  "exclude": ["node_modules"]
}
